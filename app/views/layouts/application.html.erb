<!DOCTYPE html>
<html>
  <head>
    <title>ActionCableExample</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" />

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= user_signed_in?? 'no-skin' : 'login-layout light-login'%>">

    <% if user_signed_in? %>
      <div class="navbar navbar-default">
        <div class="navbar-header pull-left">
          <div class="navbar-brand">
            Todo App by Darren
          </div>
        </div>

        <div class="navbar-buttons navbar-header pull-right">
          <ul class="nav ace-nav">
            <!--
            <li class="grey">
              <a class="dropdown-toggle" href="#">
                <i class="ace-icon fa fa-tasks"></i>
                <span class="badge badge-grey">4</span>
              </a>
            </li>
            <li class="purple">
              <a class="dropdown-toggle" href="#">
                <i class="ace-icon fa fa-bell icon-animated-bell"></i>
                <span class="badge badge-important">4</span>
              </a>
            </li>
            <li class="green">
              <a class="dropdown-toggle" href="#">
                <i class="ace-icon fa fa-envelope icon-animated-vertical"></i>
                <span class="badge badge-success">5</span>
              </a>
            </li>
            -->
            <li class="light-blue">
              <a class="dropdown-toggle">
                <i class="ace-icon fa fa-users"></i>
                <span class="user-info">
                  <small>Welcome,</small>
                  <%= current_user.name %>
                </span>
              </a>
            </li>
            <li class="light-blue"><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
          </ul>
        </div>
      </div>
      <%= render 'layouts/flash' %>
      <%= yield %>
    <% else %>
      <%= render 'layouts/flash' %>
      <div class="main-container">
        <div class="main-content">
          <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
              <div class="login-container">
                <div class="center">
                  <h1>
                    <span class="grey">Todo App</span>
                  </h1>
                  <h4 class="blue">by Darren</h4>
                </div>

                <div class="space-6"></div>

                <div class="position-relative">
                  <%= yield %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </body>
</html>
